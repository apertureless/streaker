{
  "name": "Streaker",
  "description": "GitHub contribution streak tracking menubar app",
  "version": "1.3.1",
  "author": "Jamie Weavis <jamie.weavis@gmail.com>",
  "bugs": {
    "url": "https://github.com/jamieweavis/streaker/issues"
  },
  "build": {
    "appId": "com.jamieweavis.streaker",
    "mac": {
      "darkModeSupport": true
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.6.3",
    "auto-launch": "^5.0.5",
    "bulma": "^0.7.2",
    "contribution": "^2.1.0",
    "cron": "^1.6.0",
    "electron-store": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.3"
  },
  "homepage": "https://github.com/jamieweavis/streaker#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "contribution",
    "contribution-graph",
    "electron",
    "electron-app",
    "github",
    "macos",
    "menubar",
    "streak"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/streaker.git"
  },
  "scripts": {
    "dist": "build",
    "dist-win": "build -w",
    "format": "prettier --write './src/**/*.{js,html}'",
    "lint": "eslint .",
    "pack": "build --dir",
    "start": "electron src/app.js"
  }
}
